<body>
    <header class="header">
        <div class="wrapper_1">
            <a href="index.html"><img class="logo_eSEG" src="img/logo_eSEG2.png" alt="logo de e-SEG"></a>
            <img class="display_none" src="img/toggle_button_1.png" class="toggle_button">
            <img src="img/toggle_button_2.png" class="toggle_button">
        </div>
        <div class="wrapper_2">
            <nav class="nav_links">
                <a href="/" title="Accueil">Accueil</a>
                <a href="/about" title="A propos">A&nbsp;propos</a>
                <a href="/faq" title="FAQ">FAQ</a>
                <a href="/contact" title="contacts">contacts</a>
                <a href="/register" title="inscription">inscription</a>
                <a href="/login" title="connexion">connexion</a>
            </nav>
        </div>

    </header>
    <div class="main-content">

        <h1 class="title">Inscrivez-vous</h1>
        <form class="register-form" action="/register" method="post">
            <fieldset class="info-perso">
                <legend>informations personnelles</legend>
                <table class="table">
                    <tbody>
                        <tr class="">
                            <td class="">
                                <label for="firstname">nom</label>
                            </td>
                            <td>
                                <input type="text" class="champ" name="firstname" id="firstname" placeholder="votre nom">
                            </td>
                        </tr>
                        <tr>
                            <td><label for="lastname">prenom</label></td>
                            <td><input type="text" class="champ" name="lastname" id="lastname" placeholder="votre prenom"></td>
                        </tr>
                        <tr>
                            <td><label for="email">e-mail</label></td>
                            <td><input type="text" class="champ" name="email" id="email" placeholder="votre@email.com"></td>
                        </tr>
                        <tr>
                            <td><label for="birthDay">date de naissance</label></td>
                            <td><input type="date" class="champ" name="birthDay" id="birthDay"></td>
                        </tr>
                    </tbody>
                </table>
            </fieldset>
            <fieldset class="info-academique">
                <legend>informations académiques</legend>
                <h3 class="niveau-title">votre niveau:</h3>
                <div class="level">
                    <select name="niveauEtude" class="select-level">
                    <optgroup>
                        <option value="LICENSE 1/FIP 1">LICENSE 1/FIP 1</option>
                        <option value="LICENSE 2/FIP 2">LICENSE 2/FIP 2</option>
                        <option value="LICENSE 3">LICENSE 3</option>
                    </optgroup> 
                    <optgroup>
                        <option value="MASTER 1">MASTER 1</option>
                        <option value="MASTER 2">MASTER 2</option>
                    </optgroup>
                    <optgroup>
                        <option>DOCTORAT</option>
                    </optgroup> 
                </select>
                    <select class="select-level" name="filiere" id="">
                    <option value="ECONOMIE">ECONOMIE</option>
                    <option value="FINANCE">FINANCE</option>
                    <option value="GESTION">GESTION</option>
                </select>
                    <select class="select-level" name="specialite" id="">
                    <option value="ECONOMIE AGRICOLE">ECONOMIE AGRICOLE</option>
                    <option value="ECONOMIE INTERNATIONALE">ECONOMIE INTERNATIONALE</option>
                    <option value="ECONOMIE DE DEVELOPPEMENT">ECONOMIE DE DEVELOPPEMENT</option>
                    <option value="ECONOMIE DU TRAVAIL">ECONOMIE DU TRAVAIL</option>
                    <option value="ECONOMIE NUMERIQUE">ECONOMIE NUMERIQUE</option>
                    <option value="MARKETING">MARKETING</option>
                    <option value="FINANCE">FINANCE</option>
                    <option value="FINANCE/COMPTA-GESTION CONTROLE">FINANCE/COMPTA-GESTION CONTROLE</option>
                    <option value="COMPTA-GESTION CONTROLE">COMPTA-GESTION CONTROLE</option>
                    <option value="GESTION DES RESSOURCES HUMAINES">GESTION DES RESSOURCES HUMAINES</option>
                    <option value="COMPTABILITE PUBLIQUE">COMPTABILITE PUBLIQUE</option>
                    <option value="BANQUE ET ASSURANCE">BANQUE ET ASSURANCE</option>
                    <option value="FINANCE PUBLIQUE">FINANCE PUBLIQUE</option>
                    <option value="COMPTABILITE DES ENTREPRISES">COMPTABILITE DES ENTREPRISES</option>
                </select>
                </div>
            </fieldset>
            <fieldset class="info-compte">
                <legend>informations de compte</legend>
                <table class="table">
                    <tr>
                        <td>
                            <label for="password">mot de passe</label>
                        </td>
                        <td>
                            <input type="password" name="password" id="password" class="champ" placeholder="votre mo de passe">
                        </td>
                    </tr>
                    <tr>
                        <td><label for="lastname">confirmer</label></td>
                        <td><input type="password" name="passwordConfirm" id="password" class="champ" placeholder="votre mot de passe"></td>
                    </tr>

                </table>
            </fieldset>
            <fieldset class="acceptation">
                <label class="acceptation-item" for=""><input type="checkbox" name="accept" id="accept"> j'accepte les conditions d'utilisation</label>
                <a class="acceptation-item" href="#">lire les conditions d'utiltisation</a>
            </fieldset>
            <div class="otherMetion">
                <input class="btn-inscription" type="submit" value="S'inscrire">
                <label for="connect">Déjà inscrit(e)? </label><input class="btn-connect" type="button" value="se connecter"><br>
            </div>
        </form>
    </div>
    <footer class="footer">
        <div class="social_container">
            <a href="#" class="footer_links"><img src="img/facebook.png" alt="lien facebook" title="lien facebook"></a>
